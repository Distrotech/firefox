toolkit = CONFIG['MOZ_WIDGET_TOOLKIT']

if toolkit in ('os2', 'windows'):
    DIRS += [toolkit]
elif toolkit == 'cocoa':
    DIRS += ['mac']
else:
    DIRS += ['unix']

EXPORTS += [
    'nsCollation.h',
]

UNIFIED_SOURCES += [
    'nsCharsetAlias.cpp',
