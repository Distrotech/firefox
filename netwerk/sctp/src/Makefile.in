ifeq ($(OS_TARGET),Darwin)
DEFINES += \
  -U__APPLE__ \
  $(NULL)
else
ifeq ($(OS_TARGET),FreeBSD)
DEFINES += \
  -U__FreeBSD__ \
  $(NULL)
else
ifeq ($(OS_TARGET),NetBSD)
DEFINES += \
  -U__NetBSD__ \
  $(NULL)
else
ifeq ($(OS_TARGET),OpenBSD)
DEFINES += \
  -U__OpenBSD__ \
  $(NULL)
else
ifeq ($(OS_TARGET),DragonFly)
DEFINES += \
  -U__DragonFly__ \
  $(NULL)
else
#error Unsupported platform!
endif
endif
endif
endif
endif

include $(topsrcdir)/config/rules.mk

ifdef GNU_CC
CFLAGS += -std=gnu99
endif
